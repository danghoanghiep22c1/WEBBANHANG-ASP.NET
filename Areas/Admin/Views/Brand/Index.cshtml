@model IEnumerable<BrandModel>
@{
    ViewData["title"] = " Brand Listed ";
}
<h3>Danh sách thương hiệu</h3>
<a asp-action="Create" asp-controller="Brand">Thêm thương hiệu</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên thương hiệu</th>
            <th scope="col">Mô tả thương hiệu</th>
            <th scope="col">Brand Slug</th>
            <th scope="col">Tình trạng thương hiệu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@Html.Raw(@item.Description)</td>

                <td>@item.Slug</td>
                <td>
                    @if (@item.Status == 1)
                    {
                        <span class="text text-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="text text-danger">Ẩn</span>
                    }
                </td>

                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Brand" asp-route-Id="@item.Id">Chỉnh sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Brand" asp-route-Id="@item.Id">Xóa bỏ</a>
                </td>
            </tr>
        }

    </tbody>
</table>
